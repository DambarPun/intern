<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:id="@+id/layout_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/parent_layout_main"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <ImageView
                    android:id="@+id/img_news_image_nd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/tv_main_blog_title"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="18dp"
                        android:layout_weight=".99"
                        android:ellipsize="end"
                        android:gravity="start|center"
                        android:maxLines="3"
                        android:maxLength="70"
                        android:text="BLOG TITLEsdfas dfssd fsdfs  afsdfa fsdsd fasdfasdfa sdfsdafasdf dfasd"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".01"
                        android:background="@color/colorSeparator" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/parent_layout_secondary"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:weightSum="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_secondary_blog_title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".99"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="18dp"
                    android:ellipsize="end"
                    android:gravity="start|center"
                    android:maxLines="3"
                    android:layout_gravity="center"
                    android:text="BLOG TITLEsdfasfasdfasdfasdfasdfsadfsadfsadfsdfass dfssd fsdfs  afsdfa fsdsd fasdfasdfa sdfsdafasdf dfasd"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".01"
                    android:background="@color/colorSeparator" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_nd_published_by_nd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:paddingLeft="18dp"
                    android:text="PUBLISHED BY"
                    android:textAllCaps="true"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_date_nd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingRight="4dp"
                    android:text="DATE"
                    android:textColor="@color/colorDate"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>